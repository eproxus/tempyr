<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Tempyr.ViewModels"
             xmlns:conv="using:Avalonia.Data.Converters"
             xmlns:models="using:Tempyr.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mi="using:Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="880" d:DesignHeight="700"
             x:Class="Tempyr.Views.InstalledModsView"
             x:DataType="vm:InstalledModsViewModel">

    <Panel>

        <Grid RowDefinitions="Auto,*">

            <!-- Page header -->
            <Border Grid.Row="0" Padding="24,18,24,18"
                    BorderBrush="#598ac3"
                    BorderThickness="0,0,0,1">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Installed Mods" FontSize="20" FontWeight="SemiBold"/>
                        <TextBlock FontSize="12" Foreground="#47516b" Margin="0,4,0,0">
                            <TextBlock.Text>
                                <Binding Path="Mods.Count" StringFormat="{}{0} mod(s) installed"/>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <Button Command="{Binding OpenModsFolderCommand}"
                                Background="Transparent" BorderThickness="0"
                                Padding="8" ToolTip.Tip="Open mods folder">
                            <mi:MaterialIcon Kind="FolderOpenOutline" Width="15" Height="15" Foreground="#47516b"/>
                        </Button>
                        <Button Classes="outlined"
                                Command="{Binding CheckForUpdatesCommand}"
                                IsEnabled="{Binding !IsCheckingUpdates}"
                                Padding="14,8">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <mi:MaterialIcon Kind="Refresh" Width="15" Height="15" VerticalAlignment="Center"/>
                                <TextBlock Text="Check for Updates" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Classes="outlined"
                                Command="{Binding UpdateAllCommand}"
                                Padding="14,8">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <mi:MaterialIcon Kind="DownloadMultiple" Width="15" Height="15" VerticalAlignment="Center"/>
                                <TextBlock Text="Update All" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="InstallModButton" Classes="primary" Padding="16,8">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <mi:MaterialIcon Kind="Plus" Width="15" Height="15" VerticalAlignment="Center"/>
                                <TextBlock Text="Install Mod" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Mod table -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Mods}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="False"
                      CanUserReorderColumns="False"
                      Margin="20,8,20,20">
                <DataGrid.Columns>

                    <!-- Name -->
                    <DataGridTemplateColumn Header="Name" Width="*" MinWidth="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="vm:ModItemViewModel">
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="12,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Authors -->
                    <DataGridTemplateColumn Header="Authors" Width="180" MinWidth="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="vm:ModItemViewModel">
                                <TextBlock Text="{Binding Authors}"
                                           Foreground="#47516b"
                                           VerticalAlignment="Center"
                                           Margin="12,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Installed version -->
                    <DataGridTemplateColumn Header="Installed" Width="90" MinWidth="75">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="vm:ModItemViewModel">
                                <TextBlock Text="{Binding Version}"
                                           Foreground="#47516b"
                                           FontFamily="Monospace"
                                           VerticalAlignment="Center"
                                           Margin="12,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Update status / action -->
                    <DataGridTemplateColumn Header="Update" Width="180" MinWidth="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="vm:ModItemViewModel">
                                <Panel Margin="4,0" VerticalAlignment="Center">

                                    <!-- Static status labels -->
                                    <TextBlock Text="Checking…" FontSize="12" Foreground="#47516b"
                                               IsVisible="{Binding UpdateStatus, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:UpdateStatus.Checking}}"/>
                                    <TextBlock Text="✓  Up to date" FontSize="12" Foreground="#4CAF50"
                                               IsVisible="{Binding UpdateStatus, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:UpdateStatus.UpToDate}}"/>
                                    <TextBlock Text="Not found" FontSize="12" Foreground="#47516b"
                                               IsVisible="{Binding UpdateStatus, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:UpdateStatus.NoSource}}"/>
                                    <TextBlock Text="Error" FontSize="12" Foreground="#47516b"
                                               IsVisible="{Binding UpdateStatus, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:UpdateStatus.Error}}"/>

                                    <!-- Update available: clickable button showing the new version -->
                                    <Button Command="{Binding UpdateModCommand}"
                                            IsVisible="{Binding HasUpdate}"
                                            Padding="8,3" FontSize="12"
                                            Background="#1e2d3d" BorderThickness="0"
                                            Foreground="#e8a838">
                                        <Button.Content>
                                            <Binding Path="LatestVersion" StringFormat="↑  {0}"/>
                                        </Button.Content>
                                    </Button>

                                    <!-- Downloading: progress bar -->
                                    <StackPanel IsVisible="{Binding IsDownloading}" Spacing="3">
                                        <TextBlock Text="Downloading…" FontSize="11" Foreground="#47516b"/>
                                        <ProgressBar Value="{Binding DownloadProgress}"
                                                     Minimum="0" Maximum="1"
                                                     Height="5"/>
                                    </StackPanel>

                                </Panel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


</DataGrid.Columns>
            </DataGrid>

        </Grid>

        <!-- Toast notification — floats bottom-right, manually dismissed -->
        <Border HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                IsVisible="{Binding IsToastVisible}"
                Background="#CC121b25"
                BorderBrush="#e8a838" BorderThickness="1"
                CornerRadius="6" Padding="14,10"
                BoxShadow="0 4 16 0 #88000000">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="{Binding ToastMessage}"
                           Foreground="#e8a838" FontSize="13"
                           VerticalAlignment="Center"/>
                <Button Content="✕" Command="{Binding DismissToastCommand}"
                        Padding="4,2" FontSize="11" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Install-from-URL overlay -->
        <Panel IsVisible="{Binding IsInstallOverlayOpen}">
            <!-- Backdrop -->
            <Border Background="#AA000000"/>

            <!-- Dialog card -->
            <Border HorizontalAlignment="Center" VerticalAlignment="Center"
                    Background="#1a2332" BorderBrush="#598ac3" BorderThickness="1"
                    CornerRadius="8" Padding="28,24" MinWidth="420" MaxWidth="500"
                    BoxShadow="0 8 32 0 #CC000000">
                <StackPanel Spacing="16">

                    <!-- Header -->
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="Install Mod from CurseForge"
                                   FontSize="17" FontWeight="SemiBold"/>
                        <Button Grid.Column="1" Content="✕"
                                Command="{Binding CloseInstallOverlayCommand}"
                                IsVisible="{Binding !IsInstalling}"
                                Padding="4,2" FontSize="11"/>
                    </Grid>

                    <!-- URL input -->
                    <TextBox x:Name="InstallUrlTextBox"
                             Text="{Binding InstallUrl, Mode=TwoWay}"
                             Watermark="https://www.curseforge.com/hytale/mods/..."
                             IsEnabled="{Binding !IsInstalling}"/>

                    <!-- Progress bar (visible when downloading) -->
                    <ProgressBar Value="{Binding InstallProgress}"
                                 Minimum="0" Maximum="1" Height="6"
                                 IsVisible="{Binding IsInstalling}"/>

                    <!-- Status message -->
                    <TextBlock Text="{Binding InstallStatusMessage}"
                               FontSize="12" Foreground="#47516b"
                               TextWrapping="Wrap"
                               IsVisible="{Binding InstallStatusMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>

                    <!-- Action buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="10"
                                HorizontalAlignment="Right">
                        <!-- Cancel when idle -->
                        <Button Content="Cancel"
                                Command="{Binding CloseInstallOverlayCommand}"
                                IsVisible="{Binding !IsInstalling}"
                                Padding="14,8"/>
                        <!-- Cancel download when installing -->
                        <Button Content="Cancel Download"
                                Command="{Binding InstallModCancelCommand}"
                                IsVisible="{Binding IsInstalling}"
                                Padding="14,8"/>
                        <!-- Install -->
                        <Button Classes="primary" Content="Install"
                                Command="{Binding InstallModCommand}"
                                IsVisible="{Binding !IsInstalling}"
                                Padding="16,8"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Panel>

    </Panel>
</UserControl>
