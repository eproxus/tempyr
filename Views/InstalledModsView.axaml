<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Tempyr.ViewModels"
             xmlns:conv="using:Avalonia.Data.Converters"
             xmlns:models="using:Tempyr.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="880" d:DesignHeight="700"
             x:Class="Tempyr.Views.InstalledModsView"
             x:DataType="vm:InstalledModsViewModel">

    <Panel>

        <Grid RowDefinitions="Auto,*">

            <!-- Page header -->
            <Border Grid.Row="0" Padding="24,18,24,18"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="0,0,0,1">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Installed Mods" FontSize="20" FontWeight="SemiBold"/>
                        <TextBlock FontSize="12" Opacity="0.55" Margin="0,4,0,0">
                            <TextBlock.Text>
                                <Binding Path="Mods.Count" StringFormat="{}{0} mod(s) installed"/>
                            </TextBlock.Text>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <Button Content="Check for Updates"
                                Command="{Binding CheckForUpdatesCommand}"
                                IsEnabled="{Binding !IsCheckingUpdates}"
                                Padding="14,8"/>
                        <Button Content="Update All"
                                Command="{Binding UpdateAllCommand}"
                                IsEnabled="{Binding !IsCheckingUpdates}"
                                Padding="14,8"/>
                        <Button Content="+ Install Mod" Padding="16,8"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Mod table -->
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Mods}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="False"
                      CanUserReorderColumns="False"
                      Margin="20,8,20,20">
                <DataGrid.Columns>

                    <!-- Name -->
                    <DataGridTemplateColumn Header="Name" Width="*" MinWidth="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="vm:ModItemViewModel">
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="12,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Authors -->
                    <DataGridTemplateColumn Header="Authors" Width="180" MinWidth="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="vm:ModItemViewModel">
                                <TextBlock Text="{Binding Authors}"
                                           Opacity="0.55"
                                           VerticalAlignment="Center"
                                           Margin="12,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Installed version -->
                    <DataGridTemplateColumn Header="Installed" Width="90" MinWidth="75">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="vm:ModItemViewModel">
                                <TextBlock Text="{Binding Version}"
                                           Opacity="0.7"
                                           FontFamily="Monospace"
                                           VerticalAlignment="Center"
                                           Margin="12,0"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Update status / action -->
                    <DataGridTemplateColumn Header="Update" Width="180" MinWidth="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:DataType="vm:ModItemViewModel">
                                <Panel Margin="4,0" VerticalAlignment="Center">

                                    <!-- Static status labels -->
                                    <TextBlock Text="Checking…" FontSize="12" Opacity="0.45"
                                               IsVisible="{Binding UpdateStatus, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:UpdateStatus.Checking}}"/>
                                    <TextBlock Text="✓  Up to date" FontSize="12" Foreground="#4CAF50"
                                               IsVisible="{Binding UpdateStatus, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:UpdateStatus.UpToDate}}"/>
                                    <TextBlock Text="Not found" FontSize="12" Opacity="0.4"
                                               IsVisible="{Binding UpdateStatus, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:UpdateStatus.NoSource}}"/>
                                    <TextBlock Text="Error" FontSize="12" Opacity="0.4"
                                               IsVisible="{Binding UpdateStatus, Converter={x:Static ObjectConverters.Equal}, ConverterParameter={x:Static models:UpdateStatus.Error}}"/>

                                    <!-- Update available: clickable button showing the new version -->
                                    <Button Command="{Binding UpdateModCommand}"
                                            IsVisible="{Binding HasUpdate}"
                                            Padding="8,3" FontSize="12"
                                            Foreground="#FF9800">
                                        <Button.Content>
                                            <Binding Path="LatestVersion" StringFormat="↑  {0}"/>
                                        </Button.Content>
                                    </Button>

                                    <!-- Downloading: progress bar -->
                                    <StackPanel IsVisible="{Binding IsDownloading}" Spacing="3">
                                        <TextBlock Text="Downloading…" FontSize="11" Opacity="0.55"/>
                                        <ProgressBar Value="{Binding DownloadProgress}"
                                                     Minimum="0" Maximum="1"
                                                     Height="5"/>
                                    </StackPanel>

                                </Panel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


</DataGrid.Columns>
            </DataGrid>

        </Grid>

        <!-- Toast notification — floats bottom-right, manually dismissed -->
        <Border HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,20,20"
                IsVisible="{Binding IsToastVisible}"
                Background="#CC1a1a2e"
                BorderBrush="#FF9800" BorderThickness="1"
                CornerRadius="6" Padding="14,10"
                BoxShadow="0 4 16 0 #88000000">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="{Binding ToastMessage}"
                           Foreground="#FF9800" FontSize="13"
                           VerticalAlignment="Center"/>
                <Button Content="✕" Command="{Binding DismissToastCommand}"
                        Padding="4,2" FontSize="11" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

    </Panel>
</UserControl>
